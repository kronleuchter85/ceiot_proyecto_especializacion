{
  "openapi": "3.0.0",
  "info": {
    "title": "Blockchain API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/accounts": {
      "get": {
        "summary": "Obtener todas las cuentas",
        "responses": {
          "200": {
            "description": "Lista de cuentas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accounts": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/blocks/{n}": {
      "get": {
        "summary": "Obtener los últimos N bloques",
        "parameters": [
          {
            "name": "n",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de bloques",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "blocks": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parámetro inválido"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/blocks/{n}/transactions": {
      "get": {
        "summary": "Obtener transacciones de un bloque",
        "parameters": [
          {
            "name": "n",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transacciones del bloque",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "txs": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parámetro inválido"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/contracts/{contractName}/details": {
      "get": {
        "summary": "Obtener detalles del contrato",
        "parameters": [
          {
            "name": "contractName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Información del contrato",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "contractInfo": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/contracts/{contractName}/xView/{method}": {
      "get": {
        "summary": "Invocar método de lectura del contrato",
        "parameters": [
          {
            "name": "contractName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "method",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultado de la lectura",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {}
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/contracts/{contractName}/xWrite/{method}": {
      "post": {
        "summary": "Invocar método de escritura del contrato",
        "parameters": [
          {
            "name": "contractName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "method",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "description": "Parámetros del método del contrato (dinámicos)",
                "example": {
                  "param1": "valor1",
                  "param2": 123
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transacción exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "result": {}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parámetros faltantes"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/contracts": {
      "get": {
        "summary": "Obtener contratos registrados",
        "responses": {
          "200": {
            "description": "Lista de contratos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/api/contracts/{contractName}/events/{eventName}": {
      "get": {
        "summary": "Obtener eventos de un contrato",
        "parameters": [
          {
            "name": "contractName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "eventName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Eventos obtenidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    }
  }
}